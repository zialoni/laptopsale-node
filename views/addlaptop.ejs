<%- include ("partials/header") %>

<h1>Add a laptop here!</h1>

<form action="/addlaptop" method="POST" enctype="multipart/form-data">
  <div class="form-group">
    <label>productName</label>
    <input
      type="text"
      class="form-control"
      placeholder="Enter title"
      name="title"
    />
  </div>
  <div class="form-group">
    <label>CPU</label>
    <input type="text" class="form-control" placeholder="CPU" name="cpu" />
  </div>
  <div class="form-group">
    <label>RAM</label>
    <input type="text" class="form-control" placeholder="ram" name="ram" />
  </div>
  <div class="form-group">
    <label>Storage</label>
    <input
      type="text"
      class="form-control"
      placeholder="storage"
      name="storage"
    />
  </div>
  <div class="form-group">
    <label>Screen</label>
    <input
      type="text"
      class="form-control"
      placeholder="screen"
      name="screen"
    />
  </div>
  <div class="form-group">
    <label>Price</label>
    <input type="text" class="form-control" placeholder="price" name="price" />
  </div>

  <div class="form-group">
    <label>Description</label>
    <textarea
      type="text"
      class="form-control"
      name="description"
      placeholder="Description"
      rows="3"
    ></textarea>
  </div>

